{% extends 'base.html.twig' %}

{% block title %}Gestion des Sites{% endblock %}

{% block body %}

    <div class="container mt-4">
        <h2>Liste des sites</h2>
        {{ form_start(form) }}

        {{ form_label(form) }}

        {{ form_end(form) }}

        {{ form_start(formVille) }}

        {{ form_errors(formVille) }}


        {{ form_end(formVille) }}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Code Postal</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for index, ville in villes %}

                <tr>
                    <td>
                        <form method="post" action="{{ path('app_update_ville', {'id' : ville.id, 'mode' : 'update'}) }}" onsubmit="return confirm('vous valider ?')">
                            <input type="text" id="nom-{{ index }}" name="nom" disabled value="{{ ville.nom }}">
                            <td>
                                <input type="text" id="codePostal-{{ index }}" name="codePostal" disabled value="{{ ville.codePostal }}">
                            </td>
                            <td>
                                <a href="{{ path('app_update_ville', {'id' : ville.id }) }}" onclick="activerEnregistrer(this, {{ index }}); return false;" class="btn btn-primary" >Modifier</a>
                                <input type="hidden" name="_token" value="{{ csrf_token('update' ~ ville.id) }}">
                                <button class="btn btn-success" type="submit" id="ajouter-{{ index }}" disabled >Enregistrer</button>
                            </td>
                        </form>
                    </td>
                    <td>
                        <form method="post" action="{{ path('app_delete_ville', {'id': ville.id}) }}" onsubmit="return confirm('Etes-vous sûr');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        function activerEnregistrer(link, index) {
            var row = link.closest('tr'); // Utilisez closest pour remonter à l'élément tr parent
            var inputNom = row.querySelector('#nom-' + index);
            var inputCodePostal = row.querySelector('#codePostal-' + index);
            var lienEnregistrer = row.querySelector('#ajouter-' + index);

            inputNom.disabled = false;
            inputCodePostal.disabled = false;
            lienEnregistrer.disabled = false;
        }
    </script>

{% endblock %}
