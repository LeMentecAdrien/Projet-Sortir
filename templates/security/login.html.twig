{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container mt-5 ">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="fondProfil">
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">Identifiants incorrects. Veuillez réessayer.</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a
                                            href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <h1 class="mb-3 text-center categorie">Connexion</h1>
                            <label class="fc1" for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control" autocomplete="email" required autofocus>
                            <br>
                            <label class="fc1" for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="flexButton">
                                <div class="form-check form-switch flex-wrap align-items-center mb-3">
                                    <input class="form-check-input" type="checkbox" role="switch"
                                           id="flexSwitchCheckChecked" name="remember_me">
                                    <label class="form-check-label fc1" for="flexSwitchCheckChecked">Se souvenir de
                                        moi</label>
                                </div>
                                <a href="{{ path('app_forgot_password_request') }}" class="mt-2 password-reset-link">Mot de passe
                                    oublié</a>
                            </div>
                            <div class="text-center">
                                <button class="custom-btn-login" type="submit">Connexion</button>
                            </div>

                        </form>
                        <div class="text-center">
                            <a href="{{ path('app_register') }}" class="custom-btn-login">Créer un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
